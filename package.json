{
  "name": "iobroker.template_react",
  "version": "0.0.1",
  "description": "Template React with AlCalzone Hooks",
  "author": {
	"name": "Issi",
	"email": "issi.dev.iobroker@gmail.com"
  },
  "homepage": "https://github.com/xXBJXx/ioBroker.template_react",
  "license": "MIT",
  "keywords": [
	"ioBroker",
	"template",
	"Smart Home",
	"home automation"
  ],
  "repository": {
	"type": "git",
	"url": "https://github.com/xXBJXx/ioBroker.template_react"
  },
  "dependencies": {
	"@iobroker/adapter-core": "^2.6.0"
  },
  "devDependencies": {
	"@alcalzone/release-script": "^3.5.9",
	"@emotion/react": "^11.9.3",
	"@emotion/styled": "^11.9.3",
	"@iobroker/adapter-react": "2.2.4",
	"@iobroker/dev-server": "^0.5.0",
	"@iobroker/socket-client": "^1.1.8",
	"@iobroker/testing": "^2.6.0",
	"@mui/icons-material": "^5.8.4",
	"@mui/material": "^5.8.6",
	"@mui/styles": "^5.8.6",
	"@types/chai": "^4.3.1",
	"@types/chai-as-promised": "^7.1.5",
	"@types/gulp": "^4.0.9",
	"@types/mocha": "^9.1.1",
	"@types/node": "^17.0.38",
	"@types/proxyquire": "^1.3.28",
	"@types/react": "^17.0.43",
	"@types/react-dom": "^17.0.14",
	"@types/sinon": "^10.0.11",
	"@types/sinon-chai": "^3.2.8",
	"@types/uuid": "^8.3.4",
	"@typescript-eslint/eslint-plugin": "^5.30.0",
	"@typescript-eslint/parser": "^5.30.0",
	"axios": "^0.27.2",
	"chai": "^4.3.6",
	"chai-as-promised": "^7.1.1",
	"esbuild": "^0.14.48",
	"eslint": "^8.16.0",
	"eslint-config-prettier": "^8.5.0",
	"eslint-plugin-prettier": "^4.2.1",
	"eslint-plugin-react": "^7.30.1",
	"estrella": "^1.4.1",
	"gulp": "^4.0.2",
	"iobroker-react": "github:AlCalzone/iobroker-react",
	"mocha": "^9.2.2",
	"nyc": "^15.1.0",
	"prettier": "^2.7.1",
	"proxyquire": "^2.1.3",
	"react": "^17.0.2",
	"react-dom": "^17.0.2",
	"rimraf": "^3.0.2",
	"sinon": "^13.0.2",
	"sinon-chai": "^3.7.0",
	"source-map-support": "^0.5.21",
	"tiny-glob": "^0.2.9",
	"ts-node": "^10.8.1",
	"typescript": "~4.7.4"
  },
  "main": "build/main.js",
  "files": [
	"admin{,/!(src)/**}/!(tsconfig|tsconfig.*).json",
	"admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
	"admin/build/",
	"build/",
	"www/",
	"io-package.json",
	"LICENSE"
  ],
  "scripts": {
	"prebuild": "rimraf ./build",
	"build:react": "node .build.js -react",
	"build:ts": "node .build.js -typescript",
	"build": "node .build.js -typescript -react",
	"watch:react": "npm run build:react -- --watch",
	"watch:ts": "npm run build:ts -- --watch",
	"watch": "npm run build -- --watch",
	"test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
	"test:package": "mocha test/package --exit",
	"test:unit": "mocha test/unit --exit",
	"test:integration": "mocha test/integration --exit",
	"test": "npm run test:ts && npm run test:package",
	"check": "tsc --noEmit",
	"coverage": "nyc npm run test:ts",
	"lint": "eslint --ext .ts,.tsx src/ admin/src/",
	"release": "release-script"
  },
  "nyc": {
	"include": [
	  "src/**/*.ts"
	],
	"exclude": [
	  "src/**/*.test.ts"
	],
	"extension": [
	  ".ts"
	],
	"require": [
	  "ts-node/register"
	],
	"reporter": [
	  "text-summary",
	  "html"
	],
	"sourceMap": true,
	"instrument": true
  },
  "bugs": {
	"url": "https://github.com/xXBJXx/ioBroker.template_react/issues"
  },
  "readmeFilename": "README.md"
}
